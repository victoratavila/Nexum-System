<% jobs.forEach( job => { %>
    
<br>
<div class = "container">
<div class="card mb-3" style="font-size: 20px; ">
<div class="row no-gutters">
<div class="col-md-8">
<div class="card-body">

<h1> <%=job.role %> </h1>
<h5 style="font-family: gotham light; font-weight: 600;">Empresa: <%= job.company %></h5>
<h5 style="font-family: gotham light; font-weight: 600;">Nível: <%= job.level %> </h5>
<h5 style="font-family: gotham light; font-weight: 600;">Localização: <%= job.country %> | <%= job.city %> (<%=job.state%>) </h5>
<h5 style="font-family: gotham light; font-weight: 600;">Exclusivo para PCD: <%= job.pwd_exclusive %> </h5>
<p class="card-text"><small class="text-muted" style="font-family: gotham light;">Vaga publicada em: <%= moment(job.createdAt,'YYYY-MM-DD').format('DD/MM/YYYY'); %> | <%= moment(job.updatedAt).locale('PT').format('LT'); %> </small></p>
<hr>
<div style="font-family: gotham; vertical-align: middle; background-color: black; color: white; border-radius: 5px; vertical-align: middle; width: 150px; height: 30px; text-align: center; font-size: 22px;">
<h5 style="font-size: 15px; vertical-align: middle;">Código da vaga: <%= job.id %>  
</h5>
</div>
</div>
<p class="card-text"><small class="text-muted"></small></p>
</div>
</div>
</div>
</div>
</div>
  
<% }) %>


</body>

