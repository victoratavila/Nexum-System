    <option>Junior</option>
    <option>Pleno</option>
    <option>Sênior</option>
  </select>

  <div class="form-inline" style="margin-top: 15px">
    <input type="text" name="city" id="city" required style="font-family: 'Roboto'; font-weight: 500;" required placeholder="Cidade" class = "form-control">
    <input type="text" name="state" id="state" required style="font-family: 'Roboto'; font-weight: 500; margin-left: 10px" required placeholder="Estado" class = "form-control"> 
    <input type="text" name="country" id="country" required style="font-family: 'Roboto'; font-weight: 500; margin-left: 10px" required placeholder="País" class = "form-control">
</div> <br>

<div class="display: block">
<button type="submit" class="btn btn-primary" style="margin-top: 15px; float: right;"> Cadastrar </button>
</div>
</form> 

