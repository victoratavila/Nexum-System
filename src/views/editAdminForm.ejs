<%- include('../partials/header.ejs'); %>
<%- include('../partials/navbar.ejs'); %>

<body style="font-family: gotham;">
    
<div class = "container">
<br><br><br>
<div style="font-family: Gotham light;">

    <div class="card mb-8" style="max-width: 100%; height: 500px; margin-top: -40px;">
        <div class="row no-gutters" style="margin-left: 100px;">
          <div class="col-md-3">
            <img src="/img/user.png" class="card-img" alt="..." style="border-radius: 30px; height: 220px; width: 220px;margin-top: 140px; margin-left: -30px;">
          </div>
          <div class="col-md-8">
            <div class="card-body" style="margin-right: 100px; margin-top: -50px;">
                <form action="/admin/update" method="POST" class = "form-group" style="font-size: 20px; width: 100%; margin-top: 40px;">
                <label for="newFirstName" style="margin-top: 10px;">Nome: </label>
                <input type="text" name = "newFirstName" id = "newFirstName" class = "card-text form-control"  value=" <%=sessao.firstName%> " style="font-size: 20px;">
                <label for="newLastName" style="margin-top: 10px;">Sobrenome: </label>
                <input type="text" name = "newLastName" id = "newLastName" class = "card-text form-control"  value=" <%=sessao.lastName%>" style="font-size: 20px;">
              <label for="email" style="margin-top: 10px;">Email: </label>
             <input type="text" name = "email" id = "email" class = "card-text form-control" value=" <%=sessao.email%>" style="font-size: 20px;">
             <label for="newPassword" style="margin-top: 10px;">Senha: </label>
             <input type="password" name = "newPassword" id = "newPassword" class = "card-text form-control"  value=" <%=sessao.password%>" style="font-size: 20px;" > 
             <label for="campoID" style="margin-top: 10px;">Nexum ID: </label>
             <input type="text" name = "campoID" id = "campoID" class = "card-text form-control" disabled value=" <%=sessao.id%>" style="font-size: 20px;" > <br>
             <button href="/admin/update" type="submit" class="btn btn-primary" style="margin-left: 385px; width: 150px;">Salvar</button>
             <a href="/admin/profile" class="btn btn-outline-danger" style="margin-left: 220px; width: 150px; margin-top: -72px;">Cancelar</a>
            </form>

            </div>
          </div>
        </div>
      </div>

</div>



</div>



<%- include('../partials/footer.ejs'); %>