<% list.forEach( home => { %>
    
<br>
<div class = "container">
<div class="card mb-3" style="font-size: 20px; ">
<div class="row no-gutters">
<div class="col-md-8">
<div class="card-body">

<h1>
<%= home.type %> 
</h1>

<h5 style="font-family: gotham light; font-weight: 600;">Rua: <%= home.street %></h5>
<h5 style="font-family: gotham light; font-weight: 600;">Número: <%= home.number %> </h5>
<h5 style="font-family: gotham light; font-weight: 600;">Cidade: <%= home.city %> | (<%=home.state%>) </h5>
<h5 style="font-family: gotham light; font-weight: 600;">Quantidade de quartos: <%= home.roomsAmount %> </h5>
<h5 style="font-family: gotham light; font-weight: 600;">Tamanho: <%= home.squareMeters %>m<sup>2</sup> </h5>
<p class="card-text"><small class="text-muted" style="font-family: gotham light;">Vaga publicada em: <%= moment(home.createdAt,'YYYY-MM-DD').format('DD/MM/YYYY'); %> </small></p>
<hr>
<button class = "btn btn-dark" disabled id = "codeID">Código de Identificação: <%= home.id %></button>
<a class = "btn btn-success" href="/habitation/compability/<%=home.id%>" id = "imigrantesCompatíveis">Imigrantes compatíveis</a>
</h5>
</div>
</div>
<p class="card-text"><small class="text-muted"></small></p>
</div>
</div>
</div>
</div>
</div>
  
<% }) %>



  


